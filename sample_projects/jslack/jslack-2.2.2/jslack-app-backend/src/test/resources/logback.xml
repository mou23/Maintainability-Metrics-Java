<configuration>
    <appender name="default" class="ch.qos.logback.core.FileAppender">
        <file>jslack-app-backend/logs/console.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{64} %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="default"/>
    </root>

</configuration>